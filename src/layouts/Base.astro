---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Your weekly cosmic guide — tarot readings and horoscope insights for every zodiac sign.' } = Astro.props;
const base = import.meta.env.BASE_URL;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@Celestia1Tarot" />

  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Celestial Tarot",
    "url": Astro.site,
    "sameAs": [
      "https://twitter.com/Celestia1Tarot",
      "https://www.youtube.com/@CelestialTarot",
      "https://www.tiktok.com/@celestialtarot"
    ]
  })} />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet" />

  <style is:global>
    :root {
      --color-bg: #0a0a1a;
      --color-surface: #141428;
      --color-primary: #d8ecf0;
      --color-accent: #c9a96e;
      --color-text: #e8e8f0;
      --color-text-muted: #8888a0;
      --color-border: #2a2a4a;
      --font-body: 'Inter', system-ui, sans-serif;
      --font-heading: 'Playfair Display', Georgia, serif;
    }
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    html { scroll-behavior: smooth; }
    body {
      font-family: var(--font-body); background: var(--color-bg);
      color: var(--color-text); line-height: 1.6; min-height: 100vh;
    }
    h1, h2, h3, h4 { font-family: var(--font-heading); font-weight: 600; line-height: 1.2; }
    a { color: var(--color-primary); text-decoration: none; transition: color 0.2s; }
    a:hover { color: var(--color-accent); }
    .container { max-width: 1200px; margin: 0 auto; padding: 0 1.5rem; }
  </style>
</head>
<body>
  <nav class="nav">
    <div class="container nav-inner">
      <a href={base} class="nav-brand">✦ Celestial Tarot</a>
      <div class="nav-links">
        <a href={`${base}horoscope/`}>Horoscopes</a>
        <a href={`${base}about/`}>About</a>
        <a href="https://www.youtube.com/@CelestialTarot" target="_blank" rel="noopener">YouTube</a>
      </div>
    </div>
  </nav>

  <main><slot /></main>

  <footer class="footer">
    <div class="container footer-inner">
      <div class="footer-brand">✦ Celestial Tarot</div>
      <div class="footer-social">
        <a href="https://www.youtube.com/@CelestialTarot" target="_blank" rel="noopener">YouTube</a>
        <a href="https://twitter.com/Celestia1Tarot" target="_blank" rel="noopener">Twitter</a>
        <a href="https://www.tiktok.com/@celestialtarot" target="_blank" rel="noopener">TikTok</a>
      </div>
      <div class="footer-legal">
        <a href="https://alexyuui.github.io/celestial-tarot-legal/" target="_blank" rel="noopener">Privacy & Terms</a>
        <span>© 2026 Celestial Tarot</span>
      </div>
    </div>
  </footer>

  <style>
    .nav {
      position: sticky; top: 0; z-index: 100;
      background: rgba(10, 10, 26, 0.9); backdrop-filter: blur(12px);
      border-bottom: 1px solid var(--color-border); padding: 1rem 0;
    }
    .nav-inner { display: flex; align-items: center; justify-content: space-between; }
    .nav-brand { font-family: var(--font-heading); font-size: 1.25rem; color: var(--color-accent); font-weight: 600; }
    .nav-links { display: flex; gap: 1.5rem; font-size: 0.95rem; }
    .nav-links a { color: var(--color-text-muted); }
    .nav-links a:hover { color: var(--color-primary); }
    .footer { margin-top: 6rem; border-top: 1px solid var(--color-border); padding: 3rem 0; }
    .footer-inner { text-align: center; }
    .footer-brand { font-family: var(--font-heading); font-size: 1.1rem; color: var(--color-accent); margin-bottom: 1rem; }
    .footer-social { display: flex; justify-content: center; gap: 1.5rem; margin-bottom: 1rem; }
    .footer-social a { color: var(--color-text-muted); font-size: 0.9rem; }
    .footer-legal { color: var(--color-text-muted); font-size: 0.8rem; display: flex; justify-content: center; gap: 1.5rem; }
  </style>
</body>
</html>
