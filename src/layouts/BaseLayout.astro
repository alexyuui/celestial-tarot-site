---
import '../styles/global.css';
const { title = 'Celestial Tarot', description = 'Unlock the Mysteries of the Stars — Zodiac readings, tarot insights, and cosmic guidance.' } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
</head>
<body>
  <nav class="nav">
    <div class="container nav-inner">
      <a href={base} class="logo">✦ Celestial Tarot</a>
      <div class="nav-links">
        <a href={base}>Home</a>
        <a href={`${base}zodiac/`}>Zodiac</a>
        <a href={`${base}about/`}>About</a>
        <a href={`${base}contact/`}>Contact</a>
      </div>
    </div>
  </nav>

  <main>
    <slot />
  </main>

  <footer class="footer">
    <div class="container footer-inner">
      <div class="footer-brand">
        <h3>✦ Celestial Tarot</h3>
        <p>Unlock the Mysteries of the Stars</p>
      </div>
      <div class="footer-social">
        <a href="https://youtube.com/@Celestia1Tarot" target="_blank">YouTube</a>
        <a href="https://twitter.com/Celestia1Tarot" target="_blank">Twitter</a>
        <a href="https://tiktok.com/@Celestia1Tarot" target="_blank">TikTok</a>
      </div>
      <p class="footer-copy">&copy; 2026 Celestial Tarot. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(10, 10, 26, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border);
    padding: 1rem 0;
  }
  .nav-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    font-family: 'Playfair Display', serif;
    font-size: 1.4rem;
    color: var(--accent);
    font-weight: 700;
  }
  .nav-links {
    display: flex;
    gap: 2rem;
  }
  .nav-links a {
    color: var(--text-muted);
    font-size: 0.95rem;
  }
  .nav-links a:hover { color: var(--accent); }

  .footer {
    margin-top: 6rem;
    border-top: 1px solid var(--border);
    padding: 3rem 0;
    text-align: center;
  }
  .footer-inner { display: flex; flex-direction: column; gap: 1rem; align-items: center; }
  .footer-social { display: flex; gap: 1.5rem; }
  .footer-social a { color: var(--text-muted); }
  .footer-copy { color: var(--text-muted); font-size: 0.85rem; }

  @media (max-width: 640px) {
    .nav-links { gap: 1rem; font-size: 0.85rem; }
  }
</style>
