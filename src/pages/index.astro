---
import BaseLayout from '../layouts/BaseLayout.astro';
import { signs } from '../data/zodiac';
const base = import.meta.env.BASE_URL;
---
<BaseLayout>
  <!-- Hero -->
  <section class="hero">
    <div class="container hero-inner">
      <h1>Celestial Tarot</h1>
      <p class="tagline">Unlock the Mysteries of the Stars</p>
      <p class="subtitle">Zodiac readings, tarot insights, and cosmic guidance for your journey through the stars.</p>
      <a href={`${base}zodiac/`} class="cta-btn">Explore Your Sign ‚ú¶</a>
    </div>
  </section>

  <!-- Latest Video -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">‚ú¶ Latest Reading</h2>
      <div class="video-wrapper">
        <div class="video-placeholder">
          <p>üé¨ Latest YouTube video coming soon!</p>
          <a href="https://youtube.com/@Celestia1Tarot" target="_blank" class="cta-btn">Visit Our YouTube Channel ‚Üí</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Zodiac Grid -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">‚ú¶ The Zodiac</h2>
      <div class="zodiac-grid">
        {signs.map(sign => (
          <a href={`${base}zodiac/${sign.slug}/`} class="zodiac-card">
            <span class="zodiac-symbol">{sign.symbol}</span>
            <h3>{sign.name}</h3>
            <p class="zodiac-dates">{sign.dates}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About -->
  <section class="section">
    <div class="container text-center">
      <h2 class="section-title">‚ú¶ About Celestial Tarot</h2>
      <p class="about-text">We are a cosmic collective dedicated to bringing you insightful zodiac readings, tarot guidance, and astrological wisdom. Through our videos and written content, we help you navigate life's journey with the stars as your guide.</p>
    </div>
  </section>

  <!-- Social -->
  <section class="section">
    <div class="container text-center">
      <h2 class="section-title">‚ú¶ Connect With Us</h2>
      <div class="social-links">
        <a href="https://youtube.com/@Celestia1Tarot" target="_blank" class="social-btn">‚ñ∂ YouTube</a>
        <a href="https://twitter.com/Celestia1Tarot" target="_blank" class="social-btn">ùïè Twitter</a>
        <a href="https://tiktok.com/@Celestia1Tarot" target="_blank" class="social-btn">‚ô™ TikTok</a>
      </div>
    </div>
  </section>

  <!-- Newsletter -->
  <section class="section newsletter">
    <div class="container text-center">
      <h2 class="section-title">‚ú¶ Get Your Weekly Cosmic Reading</h2>
      <p>Subscribe to receive personalized zodiac insights straight to your inbox.</p>
      <form class="newsletter-form" onsubmit="event.preventDefault(); alert('Thank you for subscribing! ‚ú¶')">
        <input type="email" placeholder="Enter your email" required />
        <button type="submit" class="cta-btn">Subscribe ‚ú¶</button>
      </form>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 8rem 0 5rem;
    background: radial-gradient(ellipse at center, rgba(26,26,62,0.6) 0%, transparent 70%);
  }
  .hero h1 {
    font-size: 4rem;
    color: var(--accent);
    margin-bottom: 0.5rem;
  }
  .tagline {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    color: var(--gold);
    margin-bottom: 1rem;
  }
  .subtitle {
    color: var(--text-muted);
    max-width: 600px;
    margin: 0 auto 2rem;
  }
  .cta-btn {
    display: inline-block;
    background: linear-gradient(135deg, var(--bg-secondary), #2a2a6e);
    color: var(--accent);
    padding: 0.8rem 2rem;
    border-radius: 50px;
    border: 1px solid var(--accent);
    font-size: 1rem;
    cursor: pointer;
    font-family: inherit;
    transition: all 0.3s;
  }
  .cta-btn:hover {
    background: var(--accent);
    color: var(--bg-primary);
    opacity: 1;
  }

  .section { padding: 4rem 0; }
  .section-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  .text-center { text-align: center; }

  .video-wrapper { max-width: 800px; margin: 0 auto; }
  .video-placeholder {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 4rem 2rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .zodiac-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 1.5rem;
  }
  .zodiac-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem 1rem;
    text-align: center;
    transition: all 0.3s;
  }
  .zodiac-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
    opacity: 1;
  }
  .zodiac-symbol { font-size: 2.5rem; display: block; margin-bottom: 0.5rem; }
  .zodiac-card h3 { font-size: 1.1rem; margin-bottom: 0.3rem; }
  .zodiac-dates { color: var(--text-muted); font-size: 0.85rem; }

  .about-text {
    max-width: 700px;
    margin: 0 auto;
    color: var(--text-muted);
    font-size: 1.1rem;
  }

  .social-links { display: flex; justify-content: center; gap: 1rem; flex-wrap: wrap; }
  .social-btn {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    color: var(--accent);
    padding: 0.8rem 1.5rem;
    border-radius: 50px;
    font-size: 0.95rem;
  }
  .social-btn:hover { border-color: var(--accent); opacity: 1; }

  .newsletter { background: rgba(26,26,62,0.4); border-radius: 20px; margin: 0 1rem; padding: 4rem 2rem; }
  .newsletter-form {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
    flex-wrap: wrap;
  }
  .newsletter-form input {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    color: var(--text);
    padding: 0.8rem 1.5rem;
    border-radius: 50px;
    font-size: 1rem;
    width: 300px;
    font-family: inherit;
  }
  .newsletter-form input:focus { outline: none; border-color: var(--accent); }

  @media (max-width: 640px) {
    .hero h1 { font-size: 2.5rem; }
    .tagline { font-size: 1.2rem; }
    .newsletter-form input { width: 100%; }
  }
</style>
