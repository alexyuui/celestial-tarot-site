---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { signs } from '../../data/zodiac';
const base = import.meta.env.BASE_URL;
---
<BaseLayout title="Zodiac Signs — Celestial Tarot">
  <section class="page-header">
    <div class="container">
      <h1>The Zodiac</h1>
      <p>Explore all twelve signs and discover your cosmic blueprint.</p>
    </div>
  </section>
  <section class="container">
    <div class="grid">
      {signs.map(sign => (
        <a href={`${base}zodiac/${sign.slug}/`} class="card">
          <span class="symbol">{sign.symbol}</span>
          <h2>{sign.name}</h2>
          <p class="meta">{sign.dates} · {sign.element}</p>
          <p class="desc">{sign.description.slice(0, 100)}…</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .page-header { text-align: center; padding: 6rem 0 3rem; }
  .page-header p { color: var(--text-muted); margin-top: 0.5rem; }
  .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1.5rem; padding-bottom: 2rem; }
  .card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s;
  }
  .card:hover { border-color: var(--accent); transform: translateY(-3px); opacity: 1; }
  .symbol { font-size: 2.5rem; }
  .card h2 { font-size: 1.3rem; margin: 0.5rem 0 0.3rem; }
  .meta { color: var(--gold); font-size: 0.85rem; margin-bottom: 0.5rem; }
  .desc { color: var(--text-muted); font-size: 0.9rem; }
</style>
